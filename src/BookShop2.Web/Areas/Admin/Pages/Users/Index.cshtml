@page
@model BookShop2.Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h2 class="text-primary">Users List</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-primary">
            <tr>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UsersList.Any())
            {
                foreach (var user in Model.UsersList)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No users available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

