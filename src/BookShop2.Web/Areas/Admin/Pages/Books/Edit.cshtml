@page
@model BookShop2.Web.Areas.Admin.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-5">
    <h2 class="text-primary">Edit Book</h2>
    <form method="post" class="mt-4" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.BookEdit.Id" />
        <div class="mb-3">
            <label class="form-label">Current Cover Image</label>
            <div>
                <vc:Image-Box contents="Model.BookEdit.CoverImage"
                              style="max-height: 200px; object-fit: cover;"
                              alt="Cover Image Preview"
                              classboot="img-fluid rounded shadow">
                </vc:Image-Box>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="BookEdit.CoverImageUpload" class="form-label">New Cover Image</label>
            <input asp-for="BookEdit.CoverImageUpload" class="form-control" />
            <span asp-validation-for="BookEdit.CoverImageUpload" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookEdit.Name" class="form-label">Name</label>
            <input asp-for="BookEdit.Name" class="form-control" />
            <span asp-validation-for="BookEdit.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookEdit.FileName" class="form-label">FileName</label>
            <input asp-for="BookEdit.FileName" class="form-control" />
            <span asp-validation-for="BookEdit.FileName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookEdit.Description" class="form-label">Description</label>
            <textarea asp-for="BookEdit.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="BookEdit.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookEdit.Author" class="form-label">Author</label>
            <input asp-for="BookEdit.Author" class="form-control" />
            <span asp-validation-for="BookEdit.Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookEdit.Date" class="form-label">Date</label>
            <input asp-for="BookEdit.Date" class="form-control" type="date" />
            <span asp-validation-for="BookEdit.Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookEdit.Language" class="form-label">Language</label>
            <select asp-for="BookEdit.Language" asp-items="@(Html.GetEnumSelectList<BookShop2.Infrastructure.DataModels.Language>())" class="form-control">
                <option value="" disabled selected>Select a Language</option>
            </select>
            <span asp-validation-for="BookEdit.Language" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookEdit.CategoryId" class="form-label">Category</label>
            <select asp-for="BookEdit.CategoryId" asp-items="@Model.SelectListCategory" class="form-control">
                <option value="" disabled selected>Select a Category</option>
            </select>
            <span asp-validation-for="BookEdit.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookEdit.Price" class="form-label">Price</label>
            <input asp-for="BookEdit.Price" class="form-control" type="number" min="0" />
            <span asp-validation-for="BookEdit.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BookEdit.Pages" class="form-label">Pages</label>
            <input asp-for="BookEdit.Pages" class="form-control" type="number" min="1" />
            <span asp-validation-for="BookEdit.Pages" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Books/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
