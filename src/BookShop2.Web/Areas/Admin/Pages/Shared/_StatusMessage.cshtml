@model string

@if (!String.IsNullOrEmpty(Model))
{
    // Determine alert class based on keywords
    var statusMessageClass = "success"; // Default to success
    if (Model.Contains("Error", StringComparison.OrdinalIgnoreCase))
    {
        statusMessageClass = "danger";
    }
    else if (Model.Contains("Delete", StringComparison.OrdinalIgnoreCase))
    {
        statusMessageClass = "danger";
    }
    else if (Model.Contains("Warning", StringComparison.OrdinalIgnoreCase))
    {
        statusMessageClass = "warning";
    }

    <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model
    </div>
}

